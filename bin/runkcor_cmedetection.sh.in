#!/bin/sh

# This script launches IDL for the pipeline to process a day, both the
# realtime and end-of-day processing.

canonicalpath() {
  if [ -d $1 ]; then
    pushd $1 > /dev/null 2>&1
    echo $PWD
  elif [ -f $1 ]; then
    pushd $(dirname $1) > /dev/null 2>&1
    echo $PWD/$(basename $1)
  else
    echo "Invalid path $1"
  fi
  popd > /dev/null 2>&1
}

# find locations relative to this script
SCRIPT_LOC=$(canonicalpath $0)
BIN_DIR=$(dirname ${SCRIPT_LOC})

source ${BIN_DIR}/kcor_include.sh

if [[ $# -gt 2 ]]; then
  EXTRA=", ${3}"
else
  EXTRA=
fi

# need to add cme_detection directory to normal KCor IDL path
KCOR_CME_PATH=+${PIPE_DIR}/cme_detection:${KCOR_PATH}

${IDL} -quiet \
    -IDL_QUIET 1 \
    -IDL_STARTUP "" \
    -IDL_PATH ${KCOR_CME_PATH} \
    -IDL_DLM_PATH ${KCOR_DLM_PATH} \
    -e "kcor_cme_detection_job, '${DATE}', config_filename='${CONFIG}' ${EXTRA}" \
    2>&1 | tail -n +3
